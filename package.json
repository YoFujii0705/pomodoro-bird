{
  "name": "voice-pomodoro-discord-bot",
  "version": "2.0.0",
  "description": "Discord bot for Pomodoro Technique with voice notifications and customizable timers",
  "main": "bot.js",
  "scripts": {
    "start": "node bot.js",
    "dev": "nodemon bot.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop pomodoro-bot",
    "pm2:restart": "pm2 restart pomodoro-bot",
    "pm2:logs": "pm2 logs pomodoro-bot",
    "setup": "npm install && mkdir -p sounds && chmod +x setup.sh && chmod +x deploy.sh"
  },
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "@discordjs/voice": "^0.16.1",
    "ffmpeg-static": "^5.2.0",
    "opusscript": "^0.0.8"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "discord",
    "bot",
    "pomodoro",
    "timer",
    "productivity",
    "voice",
    "audio",
    "notifications"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  }
}
